{
	"name": "javascript-ejs-support",
	"displayName": "EJS language support",
	"description": "2018 - EJS language support for Visual Studio Code.",
	"version": "0.5.0",
	"license": "MIT",
	"icon": "assets/icon.png",
	"publisher": "DigitalBrainstem",
	"author": {
		"name": "Derek Thomas",
		"email": "Derek@digitalbrainstem.com"
	},
	"engines": {
		"vscode": "^1.18.x"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"EJS",
		"embedded javascript",
		"syntax highlighting"
	],
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"activationEvents": [
		"onLanguage:ejs"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "ejs",
				"extensions": [
					".ejs"
				],
				"aliases": [
					"Embedded Javascript",
					"ejs"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ejs",
				"scopeName": "text.html.ejs",
				"path": "./syntaxes/ejs.json",
				"embeddedLanguages": {
					"source.css": "css",
					"source.js": "javascript"
				}
			},
			{
				"injectTo": [
					"text.html.ejs"
				],
				"scopeName": "text.html.ejs.override-js",
				"path": "./syntaxes/ejs-nested.json",
				"embeddedLanguages": {
					"text.html.ejs": "ejs",
					"text.html.ejs.override-js": "ejs"
				}
			}
		],
		"configuration": {
			"title": "EJS support configuration",
			"properties": {
				"ejs-support.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable or disable the EJS support extension (TODO: implement this functionality)"
				},
				"ejs-support.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Maximum number of problems reported"
				}
			}
		},
		"commands": [
			{
				"command": "extension.sayHello",
				"title": "Hello World"
			}
		]
	},
	"bugs": {
		"url": "https://github.com/Digitalbrainstem/ejs-grammar/issues",
		"email": "help@digitalbrainstem.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Digitalbrainstem/ejs-grammar.git"
	},
	"dependencies": {
		"vscode": "^1.18.x",
		"vscode-languageclient": "^3.5.0",
		"vscode-languageserver": "^4.1.2"
	},
	"devDependencies": {
		"@types/node": "^10.0.0",
		"typescript": "^2.8.3"
	}
}
