{
	"name": "javascript-ejs-support",
	"displayName": "EJS language support",
	"description": "2019 - EJS language support for Visual Studio Code.",
	"version": "1.1.3",
	"license": "MIT",
	"icon": "assets/icon.png",
	"publisher": "DigitalBrainstem",
	"author": {
		"name": "Derek Thomas",
		"email": "Derek@digitalbrainstem.com"
	},
	"engines": {
		"vscode": "^1.30.x"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"EJS",
		"embedded javascript",
		"syntax highlighting"
	],
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "run-p build:client build:server",
		"build:client": "tsc -p ./client/tsconfig.json",
		"build:server": "tsc -p ./server/tsconfig.json"
	},
	"activationEvents": [
		"onLanguage:ejs"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "ejs",
				"extensions": [
					".ejs"
				],
				"aliases": [
					"Embedded Javascript",
					"ejs"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ejs",
				"scopeName": "text.html.ejs",
				"path": "./syntaxes/ejs.json",
				"embeddedLanguages": {
					"source.css": "css",
					"source.js": "javascript"
				}
			},
			{
				"injectTo": [
					"text.html.ejs"
				],
				"scopeName": "text.html.ejs.override-js",
				"path": "./syntaxes/ejs-nested.json",
				"embeddedLanguages": {
					"text.html.ejs": "ejs",
					"text.html.ejs.override-js": "ejs"
				}
			}
		],
		"configuration": {
			"title": "EJS support configuration",
			"properties": {
				"ejs-support.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable or disable the EJS support extension (TODO: implement this functionality)"
				},
				"ejs-support.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Maximum number of problems reported"
				}
			}
		},
		"commands": [
			{
				"command": "extension.sayHello",
				"title": "Hello World"
			}
		]
	},
	"bugs": {
		"url": "https://github.com/Digitalbrainstem/ejs-grammar/issues",
		"email": "help@digitalbrainstem.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Digitalbrainstem/ejs-grammar.git"
	},
	"__metadata": {
		"id": "9cd87837-c82a-4817-9b79-1c84775aa158",
		"publisherId": "8a82c29a-f974-4692-be63-35a118c52919",
		"publisherDisplayName": "DigitalBrainstem"
	},
	"devDependencies": {
		"@types/node": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^3.5.3",
		"vscode-test": "^1.2.0"
	}
}
