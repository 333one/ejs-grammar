{
	"name": "Embedded Javascript",
	"scopeName": "text.html.ejs",
	"injectionSelector": "L:text.html",
	"patterns": [
		{
			"include":"#tag-comment"
		},
		{
			"include": "#ejs-tag"
		}
	],
	"repository": {
		"tag-comment": {
			"begin": "<[%?]#",
			"end": "[%?]>",
			"name": "comment.block.ejs"
		},
		"ejs-tag":{
			"name": "text.block.ejs",
			"begin": "(<[%?](?:(?!php))[_=-]?)",
			"end":"([_-]?[%?]>)",
			"beginCaptures":{ "1": { "name":"punctuation.definition.tag.begin.ejs"}},
			"endCaptures":{ "1": { "name":"punctuation.definition.tag.end.ejs"}},
			"patterns":[
				
				{
					"begin": "((else)?.?(if))|(else)",
					"beginCaptures": {
						"0": {
							"name": "keyword.control.conditional.js"
						}
					},
					"end": "(?=[_-]?[%?]>)|\\n",
					"name": "meta.block.js",
					"patterns":[
						{
							"begin": "\\s*{",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.block.js"
								}
							},
							"end": "(?=[_-]?[%?]>)|\\n",
							"name": "punctuation.definition.block.js"
						},
						{
							"include":"source.js"
						}
					]
				},
				{
					"begin": "//",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.js"
						}
					},
					"end": "(?=[_-]?[%?]>)|\\n",
					"name": "comment.line.double-slash.js"
				},

				{
					"include":"source.js"
				}
				
			]
		}
	}
}
