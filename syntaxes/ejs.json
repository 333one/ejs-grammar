{
	"name": "Embedded Javascript",
	"scopeName": "text.html.ejs",
	"injectionSelector": "L:text.html",
	"patterns": [
		{
			"include": "#tag-block-comment1"
		},
		{
			"include": "#tag-block-comment2"
		},
		{
			"include": "#tag-ejs-single-line"
		},
		{
			"include": "#tag-ejs-multi-line"
		}
	],
	"repository": {
		"tag-block-comment1": {
			"begin": "<[%?]#",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.ejs"
				}
			},
			"end": "[%?]>",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.comment.ejs"
				}
			},
			"name": "comment.block.ejs"
		},
		"tag-block-comment2": {
			"begin": "(<[%?](?:(?!php)))(\\s)*\\/\\*",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.ejs"
				}
			},
			"end": "\\*\\/(\\s)*([%?]>)",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.comment.ejs"
				}
			},
			"name": "comment.block.ejs"
		},
		"tag-ejs-single-line": {
			
			"name": "meta.tag.metadata.script.ejs",
			"begin":"(<[%?](?:(?!php))[_=-]?)(.+)(?=([_-]?[%?]>))",
			"beginCaptures": {
				"0": {
					"name": "meta.embedded.*"
				},
				"1": {
					"name": "punctuation.definition.tag.begin.ejs"
				},
				"2": {
					"name": "meta.embedded.ejs",
					"contentName": "source.js",
					"patterns":[
						{
							"include":"source.js"
						}
					]
				},
				"3": {
					"name": "punctuation.definition.tag.end.ejs"
				}
			},
			"end": "(([_-]?[%?]>))",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.ejs"
				}
			}
		},
		"tag-ejs-multi-line": {
			"contentName":"source.js",
			"name": "meta.block.ejs",
			"begin":"(<[%?](?:(?!php))[_=-]?)(.*)((?=([_-]?[%?]>))\r|\n)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.begin.ejs"
				},
				"2": {
					"name": "meta.embedded.ejs",
					"contentName": "source.js",
					"patterns":[
						{
							"include":"source.js"
						}
					]
				}
			},
			"end": "(([_-]?[%?]>))",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.ejs"
				}
			},
			"patterns":[
				{
					"include":"source.js"
				}
			]
		}
	}
}
